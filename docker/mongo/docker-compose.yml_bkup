version: '3.6'
services:
  mongo:
    networks:
      - docker_default          
    labels:
      - com.docker.stack.namespace=lsd
    container_name: lsd-mongo
    ports:
      - '10327:10327'
    image: mongo:latest
    volumes:
      - ./lsd/mongo:/data/db
      - /etc/localtime:/etc/timezone:ro
networks:
  docker_default:
    external: true
